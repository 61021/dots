{
  "custom/empty": {
    "format": ""
  },
  "group/hardware": {
    "format": "CPU: {cpu} MEM: {memory} DISK: {disk}",
    "interval": 1
  },
  "custom/nowplaying": {
    "exec": "~/.config/waybar/scripts/now-playing.sh",
    "format": "  {text}",
    "return-type": "json",
    "interval": 1,
    "escape": true,
    "hide-empty-text": false,
    "on-click": "playerctl play-pause",
    "on-click-right": "playerctl next",
    "on-click-middle": "playerctl previous",
    "tooltip-format": "Left: Play/Pause\nRight: Next\nMiddle: Previous"
  },

  "custom/exit": {
    "exec": "~/.config/waybar/scripts/system-stats.sh",
    "return-type": "json",
    "interval": 2,
    "format": "{text}",
    "tooltip": true,
    "on-click": "~/.config/my-scripts/scripts/wlogout.sh",
    "on-click-right": "hyprlock"
  },
  "custom/weather": {
    "exec": "~/.config/waybar/scripts/weather.sh",
    "return-type": "json",
    "interval": 300,
    "format": "{}",
    "tooltip": true,
    "on-click": "xdg-open https://www.google.com/search?q=weather+in+Al+Khadhraa, Baghdad"
  },
  "tray": {
    "icon-size": 16,
    "spacing": 10
  },
  "clock": {
    "format": "{:%I:%M %a %d/%m}",
    "tooltip": true,
    "tooltip-format": "Memento Mori, be mindful of death."
  },
  "cpu": {
    "format": "/ C {usage}% ",
    "on-click": "~/.config/my-scripts/settings/system-monitor.sh"
  },
  "memory": {
    "format": "/ M {}% ",
    "on-click": "~/.config/my-scripts/settings/system-monitor.sh"
  },
  "disk": {
    "interval": 1,
    "format": "D {percentage_used}% ",
    "path": "/",
    "on-click": "~/.config/my-scripts/settings/system-monitor.sh"
  },
  "network": {
    "format": "{ifname}",
    "format-wifi": "{icon}",
    "format-ethernet": "\uf1eb   Wired",
    "format-disconnected": "No Network",
    "format-icons": ["󰤯", "󰤟", "󰤢", "󰤥", "󰤨"],
    "tooltip-format": "\uf1eb {ifname} via {gwaddri}",
    "tooltip-format-wifi": "{icon}    {ifname} @ {essid}\nIP: {ipaddr}\nStrength: {signalStrength}%\nUp: {bandwidthUpBits} Down: {bandwidthDownBits}",
    "tooltip-format-ethernet": "\uf1eb    {ifname}\nIP: {ipaddr}\nup: {bandwidthUpBits} down: {bandwidthDownBits}",
    "tooltip-format-disconnected": "Disconnected",
    "max-length": 50,
    "min-length": 2,
    "on-click": "~/.config/my-scripts/settings/networkmanager.sh",
    "on-click-right": "~/.config/my-scripts/settings/networkmanager.sh"
  },
  "battery": {
    "interval": 1,
    "states": {
      "warning": 30,
      "critical": 15
    },
    "format": "{icon}    {capacity}%",
    "format-charging": "\uf0e7 {icon}    {capacity}%",
    "format-plugged": "\uf1e6 {icon}    {capacity}%",
    "format-icons": ["\uf244", "\uf243", "\uf242", "\uf241", "\uf240"]
  },
  "pulseaudio": {
    "format": "{icon}   {volume}",
    "format-bluetooth": "{volume} {icon} ",
    "format-bluetooth-muted": " {icon} {format_source}",
    "format-muted": " {format_source}",
    "format-source": "{volume}% ",
    "format-source-muted": "",
    "format-icons": {
      "headphone": " ",
      "hands-free": "\uf130",
      "headset": "\uf025",
      "phone": " ",
      "portable": " ",
      "car": " ",
      "default": ["", "", ""]
    },
    "on-click": "pavucontrol"
  },
  "bluetooth": {
    "format": " {status}",
    "format-disabled": "",
    "format-off": "",
    "interval": 30,
    "on-click": "sleep 0.1 && ~/.config/my-scripts/settings/bluetooth.sh",
    "format-no-controller": ""
  },
  "user": {
    "format": "{user}",
    "interval": 60,
    "icon": false
  },
  "backlight": {
    "format": "{icon} {percent}%",
    "format-icons": [
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      ""
    ],
    "scroll-step": 1
  }
}
